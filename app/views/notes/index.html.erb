<p id="notice"><%= notice %></p>

<h1>Notes</h1>

<table class="responsive-table">
  <thead>
    <tr>
      <th>Materia</th>
      <th>Fecha destino</th>
      <th>Body</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.materia %></td>
        <td><%= note.fecha_destino %></td>
        <td><%= note.body %></td>
        <td><%= note.estado %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
